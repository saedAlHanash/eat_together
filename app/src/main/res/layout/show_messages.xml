<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#F2F2F2"
    android:padding="4dp">

    <TextView
        android:id="@+id/message_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/source_sans_pro"
        android:maxLines="2"
        android:paddingStart="2dp"
        android:text="saed test"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/message_date"
        app:layout_constraintStart_toStartOf="@+id/message_user_name"
        app:layout_constraintTop_toBottomOf="@+id/message_user_name" />

    <TextView
        android:id="@+id/message_date"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/source_sans_pro"
        android:maxLines="2"
        android:paddingStart="2dp"
        android:text="dd/mm/yyyy"
        android:textColor="#929291"
        app:layout_constraintBottom_toBottomOf="@+id/message_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/message_user_name" />

    <TextView
        android:id="@+id/message_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/source_sans_pro"
        android:maxLines="1"
        android:paddingStart="2dp"
        android:text="saed test"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/message_date"
        app:layout_constraintStart_toEndOf="@+id/message_avatar"
        app:layout_constraintTop_toTopOf="@+id/message_avatar" />

    <ImageView
        android:id="@+id/message_avatar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/back_ground_img_view"
        android:padding="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>